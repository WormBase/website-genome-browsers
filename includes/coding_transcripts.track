[CODING_TRANSCRIPTS]
category = Genes
key      = All Transcripts
feature  = gene:WormBase
glyph    = gene
title    = sub {
	 my $f = shift;
	 return "Coding transcripts for " . $f->display_name;
	 }
label    = sub { 
		my $f = shift;
		my ($locus)  = $f->attributes('locus');
		my ($child) = $f->get_SeqFeatures;
		my $name    = $child->display_name;
		return $locus ? "$locus ($name)" : $name;
	}
description  = sub {	     
	my $f = shift;
	my ($biotype) = $f->attributes('biotype');
	# or...
#	$f->get_tag_values('biotype'));
	$biotype =~ s/_/ /g;
#	my $tags   = join(';',$f->get_all_tags());
#	return $tags;
	return $biotype;	
       }
bgcolor      = sub {
	     my $f = shift;
	     my $type = $f->type;
	     # Component parts:
	     # ncRNAs : ncRNA > exon
	     # coding : mRNA > CDS
	     return 'gray'   if $type =~ /ncrna|pseudogene|exon/i;
	     return 'violet' if $f->strand > 0;
	     return 'turquoise';
	     }
fgcolor      = black
utr_color    = gray
font2color   = blue
height  = sub {
	my $f = shift;
	# Component parts:
	# ncRNAs : ncRNA > exon
	# coding : mRNA > CDS
	return $f->type =~ /mRNA|UTR|CDS/i ? 10 : 6;
	}
